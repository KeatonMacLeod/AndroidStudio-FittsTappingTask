<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/thumb_instructions_text_view_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="110dp"
            android:gravity="center"
            android:text="@string/thumb_instructions"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/thumb_instructions_image_view_1"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_below="@+id/thumb_instructions_text_view_1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="29dp"
            app:srcCompat="@drawable/thumb" />

        <Button
            android:id="@+id/thumb_instructions_begin_trials_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/thumb_instructions_image_view_1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="48dp"
            android:text="@string/begin_trials" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>